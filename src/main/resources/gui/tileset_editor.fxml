<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.image.*?>
<?import java.lang.*?>
<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.Button?>

<GridPane xmlns:fx="http://javafx.com/fxml/1" alignment="center" hgap="10" vgap="10" xmlns="http://javafx.com/javafx/8"
          fx:controller="de.elite.games.editor.tileset.TilesetController">
    <columnConstraints>
        <ColumnConstraints halignment="LEFT" hgrow="NEVER" minWidth="10.0" prefWidth="100.0"/>
        <ColumnConstraints halignment="LEFT" hgrow="NEVER" minWidth="10.0"/>
        <ColumnConstraints halignment="LEFT" hgrow="NEVER" minWidth="10.0" prefWidth="200.0"/>
        <ColumnConstraints halignment="LEFT" hgrow="ALWAYS" minWidth="10.0" prefWidth="100.0"/>
    </columnConstraints>
    <rowConstraints>
        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="ALWAYS"/>
        <RowConstraints minHeight="-Infinity" prefHeight="30.0" vgrow="NEVER"/>
        <RowConstraints minHeight="-Infinity" prefHeight="30.0" vgrow="NEVER"/>
        <RowConstraints minHeight="-Infinity" prefHeight="30.0" vgrow="NEVER"/>
        <RowConstraints minHeight="-Infinity" prefHeight="30.0" vgrow="NEVER"/>
        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="NEVER"/>
        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="NEVER"/>
        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="NEVER"/>
        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="NEVER"/>
        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="NEVER"/>
        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="NEVER"/>
        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="NEVER"/>
    </rowConstraints>
    <children>
        <Label text="Tilesets" GridPane.columnIndex="0" GridPane.rowIndex="0">
            <font>
                <Font name="Arial" size="24"/>
            </font>
        </Label>
        <ScrollPane hbarPolicy="NEVER" prefViewportHeight="150.0" prefViewportWidth="100.0" vbarPolicy="ALWAYS"
                    GridPane.rowIndex="1" GridPane.rowSpan="4">
            <content>
                <ListView fx:id="tilesetList" editable="true" GridPane.columnIndex="0" GridPane.rowIndex="1"
                          GridPane.rowSpan="4"/>
            </content>
        </ScrollPane>
        <Label text="Tileset Data" GridPane.columnIndex="1" GridPane.columnSpan="2">
            <font>
                <Font name="Arial" size="24"/>
            </font>
        </Label>
        <TextField fx:id="tilesetNameText" GridPane.columnIndex="2" GridPane.rowIndex="1"/>
        <Label text="Name:" GridPane.columnIndex="1" GridPane.halignment="RIGHT" GridPane.rowIndex="1"/>
        <Label text="ID:" GridPane.columnIndex="1" GridPane.halignment="RIGHT" GridPane.rowIndex="2"/>
        <Label text="Width:" GridPane.columnIndex="1" GridPane.halignment="RIGHT" GridPane.rowIndex="3"/>
        <TextField fx:id="tilesetIdText" GridPane.columnIndex="2" GridPane.rowIndex="2"/>
        <TextField fx:id="tilesetWidthText" GridPane.columnIndex="2" GridPane.rowIndex="3"/>
        <Label text="Height:" GridPane.columnIndex="1" GridPane.halignment="RIGHT" GridPane.rowIndex="4"/>
        <TextField fx:id="tilesetHeightText" GridPane.columnIndex="2" GridPane.rowIndex="4"/>
        <Label text="Images" GridPane.rowIndex="6">
            <font>
                <Font name="Arial" size="24"/>
            </font>
        </Label>
        <Label text="Image Data" GridPane.columnIndex="1" GridPane.columnSpan="2" GridPane.rowIndex="6">
            <font>
                <Font name="Arial" size="24"/>
            </font>
        </Label>
        <Label text="Name:" GridPane.columnIndex="1" GridPane.halignment="RIGHT" GridPane.rowIndex="7"/>
        <Label text="ID:" GridPane.columnIndex="1" GridPane.halignment="RIGHT" GridPane.rowIndex="8"/>
        <Label text="Index:" GridPane.columnIndex="1" GridPane.halignment="RIGHT" GridPane.rowIndex="9"/>
        <Label text="Length:" GridPane.columnIndex="1" GridPane.halignment="RIGHT" GridPane.rowIndex="10"/>
        <Label text="ImageType:" GridPane.columnIndex="1" GridPane.halignment="RIGHT" GridPane.rowIndex="11"/>
        <ChoiceBox prefWidth="200.0" GridPane.columnIndex="2" GridPane.rowIndex="11"/>
        <TextField GridPane.columnIndex="2" GridPane.rowIndex="10"/>
        <TextField GridPane.columnIndex="2" GridPane.rowIndex="9"/>
        <TextField GridPane.columnIndex="2" GridPane.rowIndex="8"/>
        <TextField GridPane.columnIndex="2" GridPane.rowIndex="7"/>
        <ScrollPane hbarPolicy="NEVER" prefViewportHeight="190.0" prefViewportWidth="100.0" vbarPolicy="ALWAYS"
                    GridPane.rowIndex="7" GridPane.rowSpan="4">
            <content>
                <ListView editable="true" prefHeight="200.0" prefWidth="200.0" GridPane.rowIndex="7"
                          GridPane.rowSpan="5"/>
            </content>
        </ScrollPane>
        <HBox GridPane.rowIndex="5">
            <children>
                <Button fx:id="addTilesetButton" maxWidth="1.7976931348623157E308" mnemonicParsing="false"
                        onAction="#handleAddTilesetButtonAction" text="+" HBox.hgrow="ALWAYS"/>
                <Button fx:id="removeTilesetButton" maxWidth="1.7976931348623157E308" mnemonicParsing="false"
                        onAction="#handleRemoveTilesetButtonAction" text="-" HBox.hgrow="ALWAYS"/>
            </children>
        </HBox>
        <HBox prefHeight="100.0" prefWidth="200.0" GridPane.rowIndex="11">
            <children>
                <Button maxWidth="1.7976931348623157E308" mnemonicParsing="false" text="+" HBox.hgrow="ALWAYS"/>
                <Button maxWidth="1.7976931348623157E308" mnemonicParsing="false" text="-" HBox.hgrow="ALWAYS"/>
            </children>
        </HBox>
        <ScrollPane prefHeight="200.0" prefWidth="200.0" GridPane.columnIndex="3" GridPane.rowSpan="5">
            <content>
                <Pane fx:id="tilesetImagePane" prefHeight="200.0" prefWidth="200.0">
                    <children>
                        <ImageView fx:id="tilesetImageView" fitHeight="150.0" fitWidth="200.0" pickOnBounds="true"
                                   preserveRatio="true"/>
                    </children>
                </Pane>
            </content>
        </ScrollPane>
        <ScrollPane prefHeight="200.0" prefWidth="200.0" GridPane.columnIndex="3" GridPane.rowIndex="7"
                    GridPane.rowSpan="5">
            <content>
                <Pane prefHeight="200.0" prefWidth="200.0"/>
            </content>
        </ScrollPane>
    </children>
    <opaqueInsets>
        <Insets/>
    </opaqueInsets>
    <padding>
        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
    </padding>
</GridPane>
